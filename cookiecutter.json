{
    "full_name": "Your name",
    "email": "your.name@example.com",
    "project_name": "Name of the project",
    "project_description": "A short description of the project",
    "project_slug": "{{ cookiecutter.project_name.lower().replace(' ', '-') }}",
    "production_domain": "(automatic)",
    "license": [
        "Proprietary",
        "Apache-2",
        "BSD-3",
        "GPL-3",
        "MIT",
        "MPL-2"
    ],
    "vcs_platform": [
        "GitLab.com",
        "Bitbucket.org",
        "GitHub.com"
    ],
    "vcs_account": "company-or-username",
    "vcs_project": "{{ cookiecutter.project_slug }}",
    "ci_service": [
        ".gitlab-ci.yml",
        "bitbucket-pipelines.yml",
        ".travis.yml",
        "codeship-steps.yml",
        "shippable.yml"
    ],
    "cloud_platform": [
        "(none)",
        "APPUiO"
    ],
    "cloud_account": "platform-username",
    "cloud_project": "{{ cookiecutter.project_slug }}",
    "environment_strategy": [
        "shared",
        "dedicated"
    ],
    "gitops": ["true", "false"],
    "gitops_project": "{{ cookiecutter.project_slug }}-gitops",
    "docker_registry": "{{ cookiecutter.cloud_platform.replace('APPUiO', 'registry.appuio.ch').replace('(none)', cookiecutter.vcs_platform.replace('Bitbucket.org', 'hub.docker.com').replace('GitHub.com', 'quay.io').replace('GitLab.com', 'registry.gitlab.com') + '/' + cookiecutter.vcs_account) }}",
    "framework": [
        "(none)",
        "Django",
        "Flask",
        "Symfony",
        "TYPO3"
    ],
    "database": [
        "(none)",
        "Postgres",
        "MySQL"
    ],
    "cronjobs": [
        "(none)",
        "simple",
        "complex"
    ],
    "checks": "flake8,pylint,bandit,safety,kubernetes",
    "tests": "py37,behave",
    "monitoring": [
        "(none)",
        "Datadog",
        "NewRelic",
        "Sentry"
    ],
    "push": [
        "manual",
        "automatic",
        "force"
    ],
    "_copy_without_render": [
        "_/frameworks/Flask",
        "_/frameworks/Symfony",
        "_/frameworks/TYPO3"
    ]
}
